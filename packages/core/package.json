{
    "name": "@repo/core",
    "version": "0.0.0",
    "private": true,
    "exports": {
        ".": "./src/index.ts",
        "./marketplace": "./src/marketplace/index.ts",
        "./marketplace/*": "./src/marketplace/*",
        "./identity": "./src/identity/index.ts",
        "./identity/*": "./src/identity/*",
        "./orders": "./src/orders/index.ts",
        "./orders/*": "./src/orders/*",
        "./payments": "./src/payments/index.ts",
        "./payments/*": "./src/payments/*"
    },
    "typesVersions": {
        "*": {
            "*": [
                "src/*"
            ]
        }
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "lint": "eslint . --max-warnings 0",
        "check-types": "tsc --noEmit",
        "test": "jest"
    },
    "dependencies": {
        "@repo/database": "*",
        "zod": "^3.22.4",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "stripe": "^14.9.0"
    },
    "devDependencies": {
        "@repo/eslint-config": "*",
        "@repo/typescript-config": "*",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.11.0",
        "eslint": "^8.56.0",
        "typescript": "^5.3.0",
        "jest": "^29.7.0",
        "@types/jest": "^29.5.11",
        "ts-jest": "^29.1.1"
    }
}